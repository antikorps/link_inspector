---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  id="results-error"
  class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 hidden"
  role="alert"
>
  <h3 class="text-3xl font-bold dark:text-white text-center mt-2 mb-2">
    {t("errorTextHeading")}
  </h3>
  <h3 class="text-3xl font-bold dark:text-white text-center mt-2 mb-2">😵‍💫</h3>
  <p id="results-error-message" class="text-center mt-2 mb-2"></p>
</div>
